<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>
    
    
    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">





            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.7"
                        android:layout_height="0dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/beer_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/beer"
                                android:padding="8dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_marginTop="8dp"
                                android:id="@+id/title"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_height="0dp"

                                android:textSize="22dp"
                                android:text="Order title"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_weight="0.8" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.03"
                                    android:layout_height="match_parent">

                                </LinearLayout>

                                <LinearLayout

                                    android:layout_width="0dp"
                                    android:background="@drawable/discountbackground"
                                    android:layout_weight="0.2"

                                    android:backgroundTint="@color/orange"
                                    android:layout_height="match_parent"
                                    >

                                    <ImageView
                                        android:layout_gravity="center"
                                        android:layout_width="0dp"
                                        android:layout_weight="0.1"
                                        android:src="@drawable/discount"
                                        android:layout_height="30dp"/>

                                    <TextView
                                        android:id="@+id/currentOffer"
                                        android:layout_width="0dp"
                                        android:layout_weight="0.1"
                                        android:gravity="center|right"
                                        android:layout_height="match_parent"

                                        android:text="12"
                                        android:textSize="18dp"
                                        android:textColor="@color/black"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="0.3"
                                        android:gravity="center|left"
                                        android:layout_height="match_parent"
                                        android:text="% off"
                                        android:textColor="@color/black"
                                        android:textSize="18dp"/>



                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.03"
                                    android:layout_height="match_parent">

                                </LinearLayout>

                            </LinearLayout>





                        </LinearLayout>

                    </LinearLayout>




                    <TextView
                        android:id="@+id/tagline"
                        android:layout_width="match_parent"
                        android:text="Tagline"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_height="0dp"
                        android:layout_weight="0.1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="0.34">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:gravity="center|left"
                                android:textColor="@color/black"
                                android:text="Liked By"
                                android:textSize="20dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:gravity="center|left"
                                android:text="Amount"
                                android:textSize="20dp" />

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:gravity="center|left"
                                android:text="After Discount"
                                android:textSize="20dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/no_of_reviews"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="center|right"
                                android:textColor="@color/black"
                                android:text="Liked By"
                                android:textSize="20dp" />



                            <TextView
                                android:id="@+id/amount"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:gravity="center|right"
                                android:text="Amount"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/finalAmount"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:gravity="center|right"
                                android:text="249"
                                android:textSize="20dp" />


                        </LinearLayout>


                    </LinearLayout>





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/addToCart"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="Add to cart" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/buyNow"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:textSize="12dp"
                                android:text="Buy Now" />


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:layout_weight="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/Recomendations"
                            android:text="People also liked"
                            android:textColor="@color/black"
                            android:textSize="22dp"

                            android:gravity="center"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recomendationsRV"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="500dp"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>







    </ScrollView>
    


</layout>